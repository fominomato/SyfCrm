{% extends 'PrincipalBundle::base.html.twig' %}

{% block body %}
<div class="container">

    <div class="row">

        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <h1 class="text-center login-title">Entrar no E-lever</h1>
                <img class="profile-img" src="{{ asset('bundles/principal/images/elever.png') }}" alt="e-lever"  />

                <form action="{{ path('login_check') }}" method="post" role="form" class="form-signin">

                    {% if error %}
                        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="form-group">
                        <label for="username" >login:</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
                    </div>

                    <div class="form-group">
                        <label for="password">Senha:</label>
                        <input type="password" id="password" class="form-control" name="_password" />
                    </div>

                    <button type="submit" class="btn btn-lg btn-primary btn-block">login</button>

                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}