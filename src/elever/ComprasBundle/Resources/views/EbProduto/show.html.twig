{% extends 'ComprasBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Pedido</h1>

        <table class="record_properties">
            <tbody>
            <tr>
                <th>Idproduto</th>
                <td>{{ entity.idProduto }}</td>
            </tr>
            <tr>
                <th>Pedido</th>
                <td>{{ entity.pedido }}</td>
            </tr>
            <tr>
                <th>Chassis</th>
                <td>{{ entity.chassis }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ entity.valor }}</td>
            </tr>
            <tr>
                <th>Moeda</th>
                <td>{{ entity.moeda }}</td>
            </tr>
            <tr>
                <th>Cor</th>
                <td>{{ entity.cor }}</td>
            </tr>
            <tr>
                <th>Anofabricacao</th>
                <td>{{ entity.anoFabricacao }}</td>
            </tr>
            <tr>
                <th>Anomodelo</th>
                <td>{{ entity.anoModelo }}</td>
            </tr>
            <tr>
                <th>Ativo</th>
                <td>{{ entity.ativo }}</td>
            </tr>
            <tr>
                <th>Excluido</th>
                <td>{{ entity.excluido }}</td>
            </tr>
            <tr>
                <th>Dtcadastro</th>
                <td>{{ entity.dtCadastro|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dtatualizacao</th>
                <td>{{ entity.dtAtualizacao|date('Y-m-d H:i:s') }}</td>
            </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('compras_pedido') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('compras_pedido_edit', { 'id': entity.idProduto }) }}">
                    Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
